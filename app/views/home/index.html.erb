<% if user_signed_in? %>
  <h1>Hello, <%= current_user.email %></h1>
  <%= link_to 'Выйти', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-primary' %>
<% else %>
  <h1>Home#index</h1>

  <%= link_to_unless_current 'Регистрация', new_user_registration_path, class: 'btn btn-primary' %>
  <%= link_to_unless_current 'Войти', new_user_session_path, class: 'btn btn-outline-primary' %>
<% end %>
