<div class="container mt-4">
  <div class="row">
    <div class="col">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="col-7">
      <h3><%= link_to 'Главная', dashboard_path, class: 'nav-link' %></h3>
      <%= form_with model: Tweet.new, url: tweets_path do |f| %>
        <div class="mt-3">
          <%= f.text_area :body,placeholder: 'Напишите что-нибудь здесь', class: 'form-control tweet-input' %>
        </div>
        <div class="mt-3 text-end">
          <%= f.submit 'Добавить', class: 'btn btn-tw rounded-pill' %>
        </div>
      <% end %>
      <ul>
        <% @tweets.find_each do |tweet| %>
          <li><%= tweet.body %></li>
        <% end %>
      </ul>
    </div>
    <div class="col"></div>
  </div>
</div>
